<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MergeRootFrame" >

    <GridView
        android:horizontalSpacing="@dimen/icondisplay_gridview_horizontal_spacing"
        android:verticalSpacing="@dimen/icondisplay_gridview_vertical_spacing"

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/gallery_contents_grid_view"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:layout_gravity="left|center_vertical"
        tools:listitem="@layout/iconview_layout" />
</FrameLayout>

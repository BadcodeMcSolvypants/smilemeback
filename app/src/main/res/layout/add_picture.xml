<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"


    >


    <LinearLayout
        style="@style/PaddingRight.Mobile"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/gallery_side_background">

        <Button
            style="@style/ActionButtonAttrs"
            android:drawableTop="@drawable/actionbutton_camerastates"
            android:drawablePadding="-10dp"
            android:paddingTop="@dimen/addpictureactivity_iconpaddingtop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="New with camera"
            android:id="@+id/fromCameraButton" />

        <Button
            style="@style/ActionButtonAttrs"
            android:drawableTop="@drawable/actionbutton_devicestates"
            android:drawablePadding="-10dp"
            android:paddingTop="@dimen/addpictureactivity_iconpaddingtop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/fromDeviceButton"
            android:text="From device"/>


    </LinearLayout>






    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">


   <RelativeLayout

       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       android:background="#fff">
       <ImageView
           android:layout_centerInParent="true"
           android:contentDescription="placeholder image"
           android:layout_width="@dimen/addpictureactivity_imageview_width"
           android:layout_height="@dimen/addpictureactivity_imageview_height"
           android:id="@+id/imageView"
           android:src="@drawable/placeholder_mobile"
           android:paddingBottom="10dp" />


      <ImageView
          android:contentDescription="progressbar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/progress0step1"
          android:id="@+id/progressImageView"
          android:layout_alignParentBottom="true"
          android:layout_centerHorizontal="true"
          android:paddingBottom="4dp" />
   </RelativeLayout>

        <LinearLayout

            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="fill_parent"
            >

            <Button
                style="@style/NavButtonAttrs.Mobile"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@drawable/navigateback_button"
                android:id="@+id/prevButton"
                android:text="back"
                />


            <Button
                style="@style/NavButtonAttrs.Mobile"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@drawable/navigatenext_button"
                android:id="@+id/nextButton"
                android:text="next"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
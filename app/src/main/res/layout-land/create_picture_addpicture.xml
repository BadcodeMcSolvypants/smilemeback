<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"

    >


    <LinearLayout
        style="@style/PaddingRight"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#333">

        <Button
            style="@style/ActionButtonAttrs"
            android:layout_width="match_parent"
            android:background="@drawable/action_button"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="New with camera"
            android:id="@+id/fromCameraButton" />

        <Button
            style="@style/ActionButtonAttrs"
            android:layout_width="match_parent"
            android:background="@drawable/action_button"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="From device"/>

    </LinearLayout>






    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">


   <RelativeLayout

       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       android:background="#fff">

       <ImageView
           android:layout_centerInParent="true"
           android:contentDescription="placeholder image"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/placeholder" />
   </RelativeLayout>

        <LinearLayout

            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="fill_parent"
            >

            <Button
                style="@style/NavButtonAttrs"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@drawable/navigateback_button"
                android:text="back"
                />


            <Button
                style="@style/NavButtonAttrs"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@drawable/navigatenext_button"
                android:text="next"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
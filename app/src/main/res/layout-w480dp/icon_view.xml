<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="208dp"
    android:layout_height="184dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/mobile_gallery_listitem_bg"
    android:layout_gravity="center_horizontal"
    >

    <ImageView

        android:id="@+id/iconview_image"
        android:src="@drawable/iconview_default"
        android:layout_width="220dp"
        android:layout_height="122dp"
        android:layout_marginTop="@dimen/iconview_image_padding_top"
        android:layout_marginLeft="@dimen/iconview_image_padding_sides"
        android:layout_marginRight="@dimen/iconview_image_padding_sides"
        android:paddingBottom="0dp"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
         />

    <TextView
        android:id="@+id/iconview_label"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:text="ORANGE"
        android:layout_marginBottom="16dp"
        android:textSize="@dimen/iconview_text_size"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content" />

    <ImageView

        android:id="@+id/iconview_chkbox_image"
        android:layout_width="@dimen/iconview_checkbox_size"
        android:layout_height="@dimen/iconview_checkbox_size"
        android:layout_marginTop="@dimen/iconview_checkbox_margin"
        android:layout_marginRight="@dimen/iconview_checkbox_margin"
        android:background="@drawable/chkbox"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />


</RelativeLayout>

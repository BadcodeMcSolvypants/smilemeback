<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@android:color/background_dark</item> <!-- Timo: muutsin ajutiselt seda kohta, et buildimine toimiks -->
    </style>

    <!-- Font sizes. -->
    <style name="TextAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Small">
       <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Big">
        <item name="android:textSize">22sp</item>
    </style>

    <!-- Nav and action button appearance- for CREATE MENU -->
    <style name="NavButtonAttrs" parent="TextAppearance">
        <item name="android:textColor">#FFF</item>
        <item name="android:layout_height">56dp</item>
    </style>
    <style name="ActionButtonAttrs" parent="TextAppearance.Big">
        <item name="android:textColor">#333</item>
    </style>

    <style name="NavButtonAttrs.Mobile" parent="TextAppearance.Small">
        <item name="android:textColor">#FFF</item>
        <item name="android:layout_height">48dp</item>
    </style>
    <style name="ActionButtonAttrs.Mobile" parent="TextAppearance.Small">
        <item name="android:textColor">#333</item>
    </style>

    <style name="NavButtonAttrs.Tablet" parent="TextAppearance.Big">
        <item name="android:textColor">#FFF</item>
        <item name="android:layout_height">64dp</item>
    </style>
    <style name="ActionButtonAttrs.Tablet" parent="TextAppearance.Big">
        <item name="android:textColor">#333</item>
    </style>

    <!-- LinearLayout paddings for CREATE MENU -->
    <style name="PaddingRight">
        <item name="android:paddingRight">6dp</item>
    </style>
    <style name="PaddingRight.Mobile">
        <item name="android:paddingRight">4dp</item>
    </style>
    <style name="PaddingRight.Tablet">
        <item name="android:paddingRight">8dp</item>
    </style>

</resources>
